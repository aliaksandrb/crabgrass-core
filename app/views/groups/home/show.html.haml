- content_for :left_column do
  = render :partial => 'sidecolumn'

- if @profile.private?
  = toggle_bug_links(private_wiki_link)
  = spinner(@wiki)
  %div[@wiki]
    = render :partial => 'common/wiki/show', :locals => {:preview => true}
  = toggle_bug_links(public_wiki_link)
  = spinner(@public_wiki)
  %div[@public_wiki]
- else
  = render :partial => 'common/wiki/show', :locals => {:preview => true} if @wiki
%hr

- @pages = Page.paginate_by_path('/descending/updated_at/limit/30/', options_for_group(@group), pagination_params)

%h2.p.first= :recent_pages.t
= render :partial => 'common/pages/list'

