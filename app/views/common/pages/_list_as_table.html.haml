- ##
- ## displays a list of pages in a table (ie, using rows and columns). 
- ##
-
-  style = :updated
-  # local_assigns[:columns] ||= [:icon, :title, :updated_by, :updated_at, :contributors_count]
-  colspan = local_assigns[:hide_owner] ? 5 : 6
-  heading = true if heading.nil?
-  sortable = false

%table
  - if pages.empty?
    %tr
      %td{:colspan => colspan}
        = I18n.t(:no_search_results)
  - else
    - if heading
      = page_table_header_row(style, local_assigns[:hide_owner])
    - pages.each do |page|
      = page_table_row(page, style, local_assigns[:hide_owner])
    - if paginated?(@pages)
      %tr
        %td{:colspan => colspan}
          = pagination_links(@pages)

