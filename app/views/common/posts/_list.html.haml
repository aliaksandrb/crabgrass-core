- style = local_assigns[:style] ||= :table
- posts = local_assigns[:posts] ||= @posts
- paginate = posts.respond_to?(:total_entries)
- paginate_options ||= {}

%section{:class => "post_list #{style}"}
  = render :partial => "/common/posts/list_as_#{style}", :locals => local_assigns
  - if paginate
    = pagination_links( posts, paginate_options )

