-# requires:
-#   url
-#   post

%div.post_body{:id => post.body_id}
  - remote_form_for(:post, post, :url => url, :method => :put, :loading => show_spinner('edit_post')) do |f|
    = f.text_area :body, :rows => 8
    .form_buttons
      = submit_tag :save_button.t, :name => 'save'
      = submit_tag :cancel_button.t, :name => 'cancel'
      = submit_tag :delete_button.t, :name => 'destroy'
      = spinner('edit_post')
      .reference= formatting_reference_link

