-# This is also used after cancelling when there is no wiki to show
- if @wiki
  %span.float_right
    = link_span(wiki_edit_link, wiki_versions_link)
  %div.wiki
    - if local_assigns[:preview]
      = @wiki.preview_html
      = wiki_more_link
    - else
      = @wiki.body_html
      = wiki_less_link
