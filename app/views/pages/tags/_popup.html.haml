- form_remote_tag(*options_for_edit_tag_form) do
  %h2.first= I18n.t(:current_tags)
  - if( @page.tags.any? )
    .edit_tags.selfclear
      - @page.tags.sort_by{|t|t.name}.each do |tag|
        = remove_tag_link( tag )
  - else
    %p
      (#{I18n.t(:no_tags)})
  %h2= I18n.t(:add_tags)
  = I18n.t(:add_one_or_more_tags) + ':'
  %p
    = text_field_tag( 'add', '', { :size => 20, :tabindex => 1 } )
    = submit_tag I18n.t(:add_button)
  .buttons
    = spinner('tag')
    - close_modal_button