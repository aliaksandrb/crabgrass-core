= formy(:table_form) do |f|
  - f.row do |r|
    - r.label :page_create_owner.tcap
    - r.input change_page_owner
    - r.info help(:page_owner)
  - f.row do |r|
    - r.label :created.tcap
    - r.input "%s (%s)" % [link_to_user(@page.created_by_login), friendly_date(@page.created_at)]
  - f.row do |r|
    - if @page.deleted?
      - r.label :deleted.tcap
    - else
      - r.label :updated.tcap
    - r.input "%s (%s)" % [link_to_user(@page.updated_by_login), friendly_date(@page.updated_at)]
  - f.row do |r|
    - r.label :statistics.t
    - r.input render(:partial => 'stats')

