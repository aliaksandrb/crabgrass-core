- job = @thumbnail.remote_job
- if job.nil?
  no remote job found!
  .buttons= close_modal_button
- else
  - job = RemoteJob.find(job.id, :params => {:log => true})
  = formy(:table_form) do |f|
    - f.row do |r|
      - r.label 'input type'
      - r.input job.input_type
    - f.row do |r|
      - r.label 'output type'
      - r.input job.output_type
    - f.row do |r|
      - r.label 'state'
      - r.input job.state
    - f.row do |r|
      - r.label 'logs'
      - r.input display_logs(job.log_entries)
  - form_tag(page_xpath(@page, :action => 'requeue_job')) do
    .buttons.reverse
      = submit_tag('Retry Job')
      = close_modal_button
