%table.pretty
  %tr
    %th
    %th
    %th{:nowrap=>"nowrap"}
      = I18n.t(:asset_version_list_version_heading)
    %th{:nowrap=>"nowrap"}
      = I18n.t(:updated)
- @asset.versions.reverse.each do |version|
  - row_class = cycle('odd', 'even')
  - id = 'asset_' + @asset.id + '_version_' + version.version
  %tr{ :class => row_class, :id => id }
    %td
      - if current_user.may?(:edit, @page) and version.version < @asset.version
        %span= 'destroy_version_link(version)'
    -# %td= link_to_asset(version, :small, :crop! => '32x32')
    %td{:nobreak=>'nobreak'}
      = link_to I18n.t(:version_number, :version => version.version), version.url
    %td
      = friendly_date(version.updated_at)

