#update_message{:style => "color: red;"}
#show-audio
  -if @track && !@track.new_record?
    - stream_url = CGI::escape(@track.secret_stream_url)
    :javascript
      loadAudioPlayer("#{stream_url}", 'player', 474)
    = render :partial => 'gallery_audio/show'
  -else
    .info
      Please upload an audio file!
#upload-new-audio
  = render_audio_form_with_progress
